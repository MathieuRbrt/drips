    <ul>
    <% @suggestions.each do |suggestion| %>
      <li><%= suggestion.user.profile_name %> suggested "<%= suggestion.artist.name %>" for <%= link_to suggestion.post.location, suggestion.post %><br/>
        <%= link_to 'Accept', accept_suggestion_path(suggestion.id), :method => :put %>
         | <%= link_to 'Decline', decline_suggestion_path(:id => suggestion.id), method: :delete, data: { confirm: 'Are you sure?' } %></li>
    <% end %>
    </ul>
    <% @posts.each do |post| %>
<div class="post">
        <%= link_to image_tag(post.picture.url(:small)), post %>
        <div class="post-details">
          <h4 class="post-address"><%= link_to post.location, post %></h4>
          <h5 class="post-city"><%= link_to post.city + ", " + post.country, post %></h5>
          <div class="post-more">
            <hr>
            <span>Uploaded by <%= link_to post.user.profile_name, profile_path(post.user.profile_name) %> <%= time_ago_in_words(post.created_at) + " ago" %></span>
            <span><%= link_to 'Publish', publish_post_path(post.id), :method => :put %> | <%= link_to 'Edit', edit_post_path(post) %> | <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></span>
          </div>
        </div>

      </div>

        <% end %>

